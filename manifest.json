{
  "name": "Pivotal github commit message generator",
  "version": "1", 
  "manifest_version": 2,
  "description": "Generate a github commit message from pivotal",
  "page_action": {
    "default_title": "Pivotal github commit",
    "default_icon": "custom_logo.png"
  },
  "content_scripts": [ {
    "js": ["background.js"],
    "matches": ["https://www.pivotaltracker.com/*"],
    "css": ["style.css"]
  }],
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "128": "custom_logo_128.png",
    "48": "custom_logo_48.png",
    "16": "custom_logo_16.png"
  }
}